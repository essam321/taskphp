<?php
function checkPositiveNegative($num1, $num2) {
    if (($num1 > 0 && $num2 < 0) || ($num1 < 0 && $num2 > 0)) {
        echo "One integer is positive and the other is negative.";
    } else {
        echo "Both integers have the same sign or are both zero.";
    }
}

$num1 = 5; 
$num2 = -3;

checkPositiveNegative($num1, $num2);
?>
